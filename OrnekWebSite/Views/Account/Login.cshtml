@model OrnekWebSite.Models.Login


@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}







<div class="span9">
    <ul class="breadcrumb">
        <li><a href="/Home/Index">Anasayfa</a> <span class="divider">/</span></li>

    </ul>

    <div class="well">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
        {

            <h3>Giriş Formu </h3>




            <div class="control-group">
                <label class="control-label" for="inputLname">Kullanıcı Adınız </label>
                <div class="controls">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label" for="inputLname">Şifreniz </label>
                <div class="controls">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>





            <div class="control-group">
                <div class="controls">
                    <input type="submit" name="submitAccount" value="Giriş" class="btn btn-success">
                </div>
            </div>

        }

    </div>




</div>
</div>
