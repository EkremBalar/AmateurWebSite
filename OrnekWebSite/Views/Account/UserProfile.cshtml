@model OrnekWebSite.Models.UserProfile
@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="span9">
    <ul class="breadcrumb">
        <li><a href="/Home/Index">Anasayfa</a> <span class="divider">/</span></li>
        <li class="active">Profil Bilgileri</li>
    </ul>
    <hr class="soft" />
    <div class="well">
        @using (Html.BeginForm("UserProfile", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
        {

            <h3>Bilgilerimi Güncelle</h3>

            @Html.AntiForgeryToken()
            @Html.HiddenFor(model=>model.ID)
            <div class="control-group">
                <label class="control-label" for="inputLname">Adınız</label>
                <div class="controls">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputLname">Soyadınız </label>
                <div class="controls">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SurName, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                        @Html.ValidationMessageFor(model => model.SurName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputLname">Kullanıcı Adınız </label>
                <div class="controls">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputLname">Email</label>
                <div class="controls">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
          



            <div class="control-group">
                <div class="controls">
                    <input type="submit" name="submitAccount" value="Güncelle" class="exclusive shopBtn">
                    <a href="/Account/ChangePassword" class="btn btn-warning">Şifre Değiştir </a>
                </div>
            </div>

        }

    </div>




</div>

  </div>
