@model OrnekWebSite.Models.OrderDetails
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="span12">

        <div class="well well-small">



            <table class="table table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Sipariş ID</th>
                        <th>Sipariş Numarası</th>
                        <th>SiparişTarihi</th>
                        <th>Toplam Tutar (₺)</th>
                        <th>Sipariş Durumu</th>

                        <th>Adres</th>

                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td>@Model.OrderId</td>
                        <td>@Model.OrderNumber</td>
                        <td>@Model.OrderDate</td>
                        <td>
                            @if (Model.OrderState == OrnekWebSite.Entity.OrderState.Bekleniyor)
                            {
                                <a class="btn btn-warning">Sipariş Bekleniyor</a>
                            }
                            else if (Model.OrderState == OrnekWebSite.Entity.OrderState.Tamamlandı)
                            {
                                <a class="btn btn-success">Sipariş Tamamlandı</a>

                            }
                            else if (Model.OrderState == OrnekWebSite.Entity.OrderState.Paketlendi)
                            {
                                <a class="btn btn-info">Sipariş Paketlendi</a>

                            }
                            else if (Model.OrderState == OrnekWebSite.Entity.OrderState.Kangolandı)
                            {
                                <a class="btn btn-primary">Sipariş Kargolandı</a>

                            }


                        </td>
                        <td>@Model.Adres</td>
                        <td>@Model.Sehir</td>
                        <td>@Model.Semt</td>
                        <td>@Model.Mahalle</td>
                        <td>@Model.PostaKodu</td>


                    </tr>



                </tbody>
            </table>

            <table class="table table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Ürün Görsel</th>
                        <th>Ürün Adı</th>
                        <th>Toplam Tutar (₺)</th>
                        <th>Adet</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderLines)
                    {
                        <tr>
                            <td><img src="~/Content/image/@item.Image" height="75" width="75" /></td>
                            <td>@item.ProductName</td>
                            <td>@item.Price</td>
                            <td>@item.Quanttity</td>
                            <td><a href="/Home/ProductDetails/@item.ProductId" class="btn btn-success" target="_blank"> Ürün Detay</a></td>


                        </tr>
                    }


                </tbody>
            </table>

        </div>
    </div>
</div>
