@using OrnekWebSite.Entity
@model IEnumerable<Product>

    <h3> POPÜLER ÜRÜNLER </h3>
<ul class="nav nav-list promowrapper">
    @foreach (var item in Model)
    {
        <li>
            <div class="thumbnail">
                <img src="~/Content/image/@item.Image" alt="bootstrap ecommerce templates">
                <div class="caption">
                    <h4><a class="btn btn-info" href="/Home/ProductDetails/@item.Id">Görüntüle</a> <span class="pull-right">@item.Price ₺</span></h4>
                </div>
            </div>
        </li>
        <li style="border:0"> &nbsp;</li>
    }


</ul>
