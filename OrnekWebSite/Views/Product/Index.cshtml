@model IEnumerable<OrnekWebSite.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section class="content">                               @*admin paneline gidiyor*@
    <div class="row">
        <div class="col-xs-12">
                                                                                          
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Ürün Listesi</h3>
                </div><!-- /.box-header -->
                <br />
                <a class=" btn btn-success btn-block" href="@Url.Action("Create")">Yeni Kayıt</a>
                <br />
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Görsel</th>
                                <th>Adı</th>
                                <th>Onaylı</th>
                                <th>Anasayfada</th>
                                <th>Popüler</th>
                                <th>Açıklama</th>
                                

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><img src="~/Content/image/@item.Image" width="80" height="60" /></td>

                                    <td>@item.Name</td>
                                    <td>
                                        @if (item.IsApproved)
                                        {
                                            <label class="label label-success">Evet</label>
                                        }
                                        else
                                        {
                                            <label class="label label-danger">Hayır</label>
                                        }

                                    </td>


                                    <td>
                                        @if (item.IsHome)
                                        {
                                            <label class="label label-success">Evet</label>
                                        }
                                        else
                                        {
                                            <label class="label label-danger">Hayır</label>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsFeatured)
                                        {
                                            <label class="label label-success">Evet</label>
                                        }
                                        else
                                        {
                                            <label class="label label-danger">Hayır</label>
                                        }
                                    </td>
                                    <td>@item.Descriptions</td>

                                    <td>
                                        <a class="btn btn-primary" href="@Url.Action("Edit",new {id=item.Id })">Düzenle  </a>
                                        <a class="btn btn-danger" href="@Url.Action("Delete",new {id=item.Id })">Sil  </a>
                                    </td>

                                </tr>

                            }


                        </tbody>


                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>
