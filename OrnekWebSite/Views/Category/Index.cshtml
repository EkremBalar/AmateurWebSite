@model IEnumerable<OrnekWebSite.Entity.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Kategori Listesi</h3>
                </div><!-- /.box-header -->
                <br />
                <a class=" btn btn-success btn-block" href="@Url.Action("Create")">Yeni Kayıt</a>
                <br />
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Kategori Adı</th>
                                <th>Açıklama</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>
                                        @item.Descrition
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" href="@Url.Action("Edit",new {id=item.Id })">Düzenle  </a>
                                        <a class="btn btn-danger" href="@Url.Action("Delete",new {id=item.Id })">Sil  </a>
                                    </td>

                                </tr>

                            }


                        </tbody>

                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>